{
	"manifest_version": 2,
	"name": "SNOW screenshot extension",
	"description": "This extension allows the user take screenshot of the page and store it in the appropriate google drive location",
	"version": "0.0.3",
	"icons": {
		"16": "./img/icon_16.png",
		"48": "./img/icon_48.png",
		"128": "./img/icon_128.png"
	},
	"permissions": [
		"storage",
		"identity",
		"<all_urls>",
		"tabs",
		"activeTab",
		"notifications",
		"webNavigation",
		"*://*.google.com/",
		"http://*/*",
		"https://*/*",
		"chrome://favicon/"
	],
	"browser_action": {
		"default_icon": "./img/icon_128.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
    {
      "matches": ["https://coxauto.service-now.com/time*/**"],
      "js": ["./js/content.js"],
      "run_at": "document_idle"
    }
	],
  "background": {
		"persistent": false,
		"page": "background.html"
  },
	"content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
	"web_accessible_resources": ["options.html"],
	"options_page": "options.html",
	"oauth2": {
		"client_id": "384905528545-g7uhb4hm9498nunobhcnq5vscg78ju2k.apps.googleusercontent.com",
		"scopes": ["https://www.googleapis.com/auth/drive"]
	}
}
